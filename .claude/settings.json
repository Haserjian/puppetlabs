      "Bash(curl * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod 777 /)",
      "Bash(chmod -R 777 /)",
      "Bash(:(){ :|:& };:)",
