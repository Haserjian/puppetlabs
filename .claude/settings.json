  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "FILE_PATH=\"$CLAUDE_FILE_PATH\"; if [ -n \"$FILE_PATH\" ]; then if echo \"$FILE_PATH\" | grep -qE '\\.(js|jsx|ts|tsx|json|css|scss|md)$'; then npx prettier --write \"$FILE_PATH\" 2>/dev/null || true; fi; if echo \"$FILE_PATH\" | grep -qE '\\.(py)$'; then python3 -m black \"$FILE_PATH\" 2>/dev/null || python -m black \"$FILE_PATH\" 2>/dev/null || true; python3 -m isort \"$FILE_PATH\" 2>/dev/null || python -m isort \"$FILE_PATH\" 2>/dev/null || true; fi; fi"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "COMMAND=\"$CLAUDE_BASH_COMMAND\"; if echo \"$COMMAND\" | grep -qE '(rm\\s+-rf\\s+[/~]|:(){ :|:& };:|>/dev/sd|mkfs\\.|dd\\s+if=.*of=/dev|sudo\\s+(rm|dd|mkfs)|chmod\\s+-R\\s+777\\s+/)'; then echo 'BLOCKED: Potentially dangerous command' >&2; exit 2; fi"
          }
        ]
      }
    ]
  },
  "env": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "FORCE_COLOR": "1",
    "NODE_ENV": "development"
  }
}
